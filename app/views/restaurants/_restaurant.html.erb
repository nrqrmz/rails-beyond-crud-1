<div id="<%= dom_id restaurant %>">
  <p>
    <strong>Name:</strong>
    <%= restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= restaurant.address %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= '⭐' * restaurant.rating %>
  </p>

  <div class="d-flex justify-content-between">
    <p>
      <%= link_to 'see chef', chef_restaurant_path(restaurant) %>
    </p>
    <p>
      <%= link_to 'write review', new_restaurant_review_path(restaurant) %>
    </p>
  </div>

</div>
